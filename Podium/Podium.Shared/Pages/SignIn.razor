@page "/signin"
@using Podium.Shared.Services.Api
@using Podium.Shared.Services.State
@inject IPodiumApiClient ApiClient
@inject AuthStateService AuthState
@inject NavigationManager Navigation

<PageTitle>Sign In - Podium</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2>Sign In to Podium</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">@successMessage</div>
        }

        <div class="auth-tabs">
            <button class="@(authMethod == "password" ? "active" : "")" @onclick="@(() => authMethod = "password")">
                Password
            </button>
            <button class="@(authMethod == "email" ? "active" : "")" @onclick="@(() => authMethod = "email")">
                Email Code
            </button>
        </div>

        @if (authMethod == "password")
        {
            <div class="auth-form">
                <div class="form-group">
                    <label>Email or Username</label>
                    <input type="text" class="form-control" @bind="emailOrUsername" placeholder="your@email.com or username" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" @bind="password" placeholder="••••••••" />
                </div>

                <button class="btn btn-primary w-100" @onclick="SignInWithPassword" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </div>
        }
        else
        {
            @if (!otpSent)
            {
                <div class="auth-form">
                    <div class="form-group">
                        <label>Email or Username</label>
                        <input type="text" class="form-control" @bind="emailOrUsernameForOtp" placeholder="your@email.com or username" />
                    </div>

                    <button class="btn btn-primary w-100" @onclick="SendOtp" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span>Sending code...</span>
                        }
                        else
                        {
                            <span>Send Verification Code</span>
                        }
                    </button>
                </div>
            }
            else
            {
                <div class="auth-form">
                    <p class="text-center">We've sent a verification code to <strong>@displayEmail</strong></p>

                    <div class="form-group">
                        <label>Verification Code</label>
                        <input type="text" class="form-control" @bind="otpCode" placeholder="000000" maxlength="6" />
                    </div>

                    <button class="btn btn-primary w-100" @onclick="VerifyOtp" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span>Verifying...</span>
                        }
                        else
                        {
                            <span>Verify & Sign In</span>
                        }
                    </button>

                    <button class="btn btn-link w-100" @onclick="ResetOtp">Send a new code</button>
                </div>
            }
        }

        <div class="auth-footer">
            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
        </div>
    </div>
</div>

@code {
private string authMethod = "password";
private string emailOrUsername = "";
private string emailOrUsernameForOtp = "";
private string email = "";
private string password = "";
private string otpCode = "";
private bool otpSent = false;
private bool isLoading = false;
private string? errorMessage;
private string? successMessage;
private string displayEmail = ""; // For showing which email received the code

private async Task SignInWithPassword()
{
    errorMessage = null;
    successMessage = null;

    if (string.IsNullOrWhiteSpace(emailOrUsername) || string.IsNullOrWhiteSpace(password))
    {
        errorMessage = "Please enter both email/username and password.";
        return;
    }

    isLoading = true;
    try
    {
        var response = await ApiClient.SignInAsync(emailOrUsername, password);
        if (response.Success && response.Data != null)
        {
            // Use the sessionId returned from API
            await AuthState.SetAuthStateAsync(response.Data.UserId, response.Data.Username, response.Data.SessionId);
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = response.Error ?? "Sign in failed. Please try again.";
        }
    }
    catch (Exception ex)
    {
        errorMessage = $"Error: {ex.Message}";
    }
    finally
    {
        isLoading = false;
    }
}

private async Task SendOtp()
{
    errorMessage = null;
    successMessage = null;

    if (string.IsNullOrWhiteSpace(emailOrUsernameForOtp))
    {
        errorMessage = "Please enter your email or username.";
        return;
    }

    isLoading = true;
    try
    {
        var response = await ApiClient.SendOtpAsync(emailOrUsernameForOtp);
        if (response.Success)
        {
            otpSent = true;
            // Store the input for display and verification
            email = emailOrUsernameForOtp;
            displayEmail = emailOrUsernameForOtp.Contains("@") ? emailOrUsernameForOtp : $"your registered email";
            successMessage = "Verification code sent! Check your email.";
        }
        else
        {
            errorMessage = response.Error ?? "Failed to send code. Please try again.";
        }
    }
    catch (Exception ex)
    {
        errorMessage = $"Error: {ex.Message}";
    }
    finally
    {
        isLoading = false;
    }
}

    private async Task VerifyOtp()
    {
        errorMessage = null;
        successMessage = null;

        if (string.IsNullOrWhiteSpace(otpCode))
        {
            errorMessage = "Please enter the verification code.";
            return;
        }

        isLoading = true;
        try
        {
            var response = await ApiClient.VerifyOtpAsync(email, otpCode);
            if (response.Success && response.Data != null)
            {
                // Use the sessionId returned from API
                await AuthState.SetAuthStateAsync(response.Data.UserId, response.Data.Username, response.Data.SessionId);
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = response.Error ?? "Invalid or expired code.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetOtp()
    {
        otpSent = false;
        otpCode = "";
        errorMessage = null;
        successMessage = null;
    }
}
