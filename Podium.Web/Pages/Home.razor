@page "/"
@using Podium.Shared.Components.Auth
@using Podium.Shared.Services
@inject IAuthenticationService AuthService
@inject NavigationManager NavManager

<PageTitle>Podium - Multi-Sport Prediction Platform</PageTitle>

@if (string.IsNullOrEmpty(userId))
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="text-center mb-4">
                    <h1 class="display-4">🏆 Podium</h1>
                    <p class="lead">Predict the podium, compete with friends!</p>
                </div>
                <SignInComponent OnSignedIn="HandleSignedIn" />
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Welcome, @userName! 👋</h2>
                    <button class="btn btn-outline-secondary" @onclick="SignOut">Sign Out</button>
                </div>

                <div class="row g-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <div class="display-4 mb-3">🏁</div>
                                <h5 class="card-title">Make Predictions</h5>
                                <p class="card-text">Choose your podium for upcoming events</p>
                                <button class="btn btn-primary" @onclick='() => NavManager.NavigateTo("/predictions")'>
                                    Start Predicting
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <div class="display-4 mb-3">📊</div>
                                <h5 class="card-title">View Results</h5>
                                <p class="card-text">See how your predictions performed</p>
                                <button class="btn btn-primary" @onclick='() => NavManager.NavigateTo("/results")'>
                                    View Results
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <div class="display-4 mb-3">🏆</div>
                                <h5 class="card-title">Leaderboards</h5>
                                <p class="card-text">See where you rank against others</p>
                                <button class="btn btn-primary" @onclick='() => NavManager.NavigateTo("/leaderboard")'>
                                    View Rankings
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string userId = string.Empty;
    private string userName = string.Empty;

    private void HandleSignedIn((string UserId, string UserName) userInfo)
    {
        userId = userInfo.UserId;
        userName = userInfo.UserName;
        
        // Store in session/local storage if needed
        StateHasChanged();
    }

    private async Task SignOut()
    {
        // Implement sign out logic
        userId = string.Empty;
        userName = string.Empty;
        StateHasChanged();
    }
}
